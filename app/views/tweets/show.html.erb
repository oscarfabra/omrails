<div class="container" id="home-container">
  <div class="row">
    <div class="offset-md-2 col-md-8">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= @tweet.user.email %></h5>
          <p class="card-text"><%= @tweet.content %></p>
          <% if @tweet.user == current_user %>
            <%= link_to 'Edit', edit_tweet_path(@tweet), class: "card-link" %>
            <%= link_to 'Destroy', @tweet, class: "card-link", method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
          <%= link_to 'Back', tweets_path, class: "card-link" %>
        </div>
      </div>
    </div>
  </div>
</div>