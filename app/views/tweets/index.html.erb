<div class="container" id="home-container">
  
  <div class="row">  
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <% if user_signed_in? %>
            <h5 class="card-title">Your Account</h5>
            <p class="card-text"><%= current_user.email %></p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <table class="table">
        <thead>
          <tr>
            <th>User</th>
            <th>Content</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @tweets.each do |tweet| %>
            <tr>
              <td><%= tweet.user.email %></td>
              <td><%= tweet.content %></td>
              <td><%= link_to 'Show', tweet %></td>
              <% if tweet.user == current_user %>
                <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
                <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% else %>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <% if user_signed_in? %>
        <%= link_to 'New Tweet', new_tweet_path %>
      <% end %>
    </div>
  </div>
</div>