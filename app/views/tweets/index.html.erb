<div class="container" id="home-container">
  <div class="row">  
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <% if user_signed_in? %>
            <h5 class="card-title"><%= link_to current_user.name, user_path(current_user.username) %></h5>
            <p class="card-text"><%= link_to current_user.username, user_path(current_user.username) %></p>
          <% else %>
            <p class="card-text"><%= link_to "Sign in", signin_path %> or <%= link_to "Sign up", signup_path %> now.</p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <% if user_signed_in? %>
        <%= link_to 'New Tweet', new_tweet_path %>
      <% end %>
      <ul class="list-group">
        <% @tweets.each do |tweet| %>
          <%= link_to tweet, class: "list-group-item list-group-item-action" do %>
              <h5 class="card-title"><%= tweet.user.username %></h5>
              <p class="card-text"><%= tweet.content %></p>
              <% if tweet.image.present? %>
                <center><img class="img-fluid" src=<%= tweet.image %> /></center>
                <br/>
              <% end %>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>